{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Start Backend",
            "type": "shell",
            "command": "sh dev.sh",
            "options": {
                "cwd": "${workspaceFolder}/front/backend"
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "panel": "new"
            },
            "runOptions": {
                "runOn": "folderOpen"
            }
        },
        {
            "label": "Build Frontend",
            "type": "shell",
            "command": "npm run build:copy",
            "options": {
                "cwd": "${workspaceFolder}/front"
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "panel": "new"
            },
            "runOptions": {
                "runOn": "folderOpen"
            }
        },
        {
            "label": "Open GitHub Project",
            "type": "shell",
            // This is the default/fallback command
            "command": "open https://github.com/orgs/GENESIS-AI-Hub/projects/3",
            "windows": {
                "command": "start https://github.com/orgs/GENESIS-AI-Hub/projects/3"
            },
            "osx": {
                "command": "open https://github.com/orgs/GENESIS-AI-Hub/projects/3"
            },
            "linux": {
                "command": "xdg-open https://github.com/orgs/GENESIS-AI-Hub/projects/3"
            },
            "runOptions": {
                "runOn": "folderOpen"
            },
            "presentation": {
                "reveal": "silent"
            }
        }
    ]
}